<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modificar_elemento_usuario"
        android:textStyle="bold"
        android:textColor="@color/colorNegro"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/tvActual"
        android:layout_alignParentStart="true"
        android:id="@+id/textInputLayout">

        <EditText
            android:id="@+id/etVariable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textInputLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/textInputLayout2">

        <EditText
            android:id="@+id/etClaveVariable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/ingrese_clave_actual"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnModificarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modificar_boton"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textInputLayout2"
        android:layout_toStartOf="@+id/textView11" />

    <Button
        android:id="@+id/btnCancelarE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boton_cancelar"
        android:layout_alignBaseline="@+id/btnModificarUsuario"
        android:layout_alignBottom="@+id/btnModificarUsuario"
        android:layout_toEndOf="@+id/textView11" />

</RelativeLayout>