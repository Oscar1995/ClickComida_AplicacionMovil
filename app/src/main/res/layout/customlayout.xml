<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivProductoImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/clock" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivProductoImage"
            android:layout_toEndOf="@+id/ivProductoImage"
            android:text="Nombre de la tienda"
            android:textColor="@color/colorNegro"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDesStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtOption"
            android:layout_weight="1"
            android:text="Descripcion"
            android:textAlignment="textStart"
            android:textColor="@color/colorNegro" />
    </LinearLayout>
</LinearLayout>