<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivProductoImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/clock" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivProductoImage"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/ivProductoImage"
            android:text="Nombre de la tienda"
            android:textColor="@color/colorNegro" />

        <TextView
            android:id="@+id/txtDesStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtOption"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text="Descripcion"
            android:textAlignment="textStart"
            android:textColor="@color/colorNegro" />

        <RatingBar
            android:id="@+id/rbStore"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="5dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="1.0" />

        <TextView
            android:id="@+id/tvCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Fecha_Creacion"
            android:textColor="@color/colorNegro" />
    </LinearLayout>
</LinearLayout>